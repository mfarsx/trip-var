{
  "name": "tripvar-server",
  "version": "1.0.0",
  "description": "Server component for the Tripvar application",
  "main": "src/index.js",
  "scripts": {
    "start": "NODE_NO_WARNINGS=1 node src/index.js",
    "dev": "NODE_NO_WARNINGS=1 nodemon src/index.js",
    "test": "NODE_NO_WARNINGS=1 jest --detectOpenHandles --forceExit",
    "test:clean": "NODE_NO_WARNINGS=1 jest --detectOpenHandles --forceExit --no-coverage --silent",
    "test:watch": "NODE_NO_WARNINGS=1 jest --watch --detectOpenHandles",
    "test:coverage": "NODE_NO_WARNINGS=1 jest --coverage --detectOpenHandles --forceExit",
    "test:integration": "NODE_NO_WARNINGS=1 jest --testPathPattern=integration --detectOpenHandles --forceExit",
    "test:unit": "NODE_NO_WARNINGS=1 jest --testPathPattern=unit --detectOpenHandles --forceExit",
    "test:auth": "NODE_NO_WARNINGS=1 jest --testPathPattern=auth --detectOpenHandles --forceExit --no-coverage --silent",
    "test:booking": "NODE_NO_WARNINGS=1 jest --testPathPattern=booking --detectOpenHandles --forceExit --no-coverage --silent",
    "test:destination": "NODE_NO_WARNINGS=1 jest --testPathPattern=destination --detectOpenHandles --forceExit --no-coverage --silent",
    "test:payment": "NODE_NO_WARNINGS=1 jest --testPathPattern=payment --detectOpenHandles --forceExit --no-coverage --silent",
    "test:health": "NODE_NO_WARNINGS=1 jest --testPathPattern=health --detectOpenHandles --forceExit --no-coverage --silent",
    "test:all": "npm run test:unit && npm run test:integration",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "seed": "node src/scripts/seedDestinations.js"
  },
  "keywords": [
    "tripvar",
    "server",
    "api"
  ],
  "author": "mfarsx",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "express-slow-down": "^3.0.0",
    "express-validator": "^7.2.0",
    "helmet": "^8.0.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.9.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "dotenv": "^17.2.2",
    "eslint": "^9.34.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^3.0.1",
    "jest": "^30.1.3",
    "mongodb-memory-server": "^10.2.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mfarsx/tripvar-server.git"
  },
  "bugs": {
    "url": "https://github.com/mfarsx/tripvar-server/issues"
  },
  "homepage": "https://github.com/mfarsx/tripvar-server#readme"
}
