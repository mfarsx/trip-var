# ======================
# Application Settings
# ======================
APP_NAME=TripVar
APP_VERSION=1.0.0
NODE_ENV=development
DEBUG=True

# ======================
# API Configuration
# ======================
API_HOST=0.0.0.0
API_PORT=8000
API_V1_PREFIX=/api/v1

# ======================
# Frontend Configuration
# ======================
VITE_APP_NAME=${APP_NAME}
VITE_APP_VERSION=${APP_VERSION}
VITE_API_URL=http://${API_HOST}:${API_PORT}
VITE_API_PATH=${API_V1_PREFIX}
VITE_API_TIMEOUT=30000
VITE_DEV_MODE=true

# ======================
# Authentication
# ======================
# Backend Auth - Must be at least 32 characters long
SECRET_KEY=replace-this-with-a-secure-secret-key-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Frontend Auth
VITE_AUTH_TOKEN_KEY=tripvar_token
VITE_AUTH_STORAGE_KEY=tripvar_auth

# ======================
# Database
# ======================
# Must start with mongodb:// or mongodb+srv://
MONGODB_URL=mongodb://localhost:27017
MONGODB_NAME=tripvar_db

# ======================
# CORS Settings
# ======================
# Comma-separated lists
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# ======================
# Feature Flags
# ======================
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=true

# ======================
# Error Reporting
# ======================
VITE_SENTRY_DSN=your-sentry-dsn
# Must be one of: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ======================
# AI Models
# ======================
# Your HuggingFace API key
HF_API_KEY=your-huggingface-api-key
# Must be a valid HTTP/HTTPS URL
LLM_STUDIO_URL=http://localhost:8080 